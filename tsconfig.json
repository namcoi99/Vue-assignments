{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "types": [
      "webpack-env",
      "jest"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
     "src/modules/catalog/layouts/AppContact.vue", "src/modules/catalog/layouts/AppHeader.vue", "src/modules/catalog/pages/MainPage.vue", "src/modules/catalog/components/catalog/CatalogBodyContent.vue", "src/modules/catalog/components/product/ProductContentRight.vue", "src/modules/catalog/components/product/ProductContentLeft.vue", "src/modules/catalog/components/product/ProductTopNavigation.vue", "src/modules/catalog/components/shopping-cart/CartBodyContent.vue"  ],
  "exclude": [
    "node_modules"
  ]
}
