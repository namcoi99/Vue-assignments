, "src/modules/catalog/components/Catalog/CatalogBreadcrumb.vue", "src/modules/catalog/layouts/AppContact.vue", "src/modules/catalog/layouts/AppHeader.vue", "src/modules/catalog/components/Catalog/ProductFilter.vue", "src/modules/catalog/components/Catalog/BodyContent.vue", "src/modules/catalog/components/Catalog/TopFilterSelect.vue", "src/modules/catalog/components/Catalog/SideFilter.vue", "src/modules/catalog/pages/MainPage.vue"  ],
